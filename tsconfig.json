{
  "compileOnSave": false,
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "moduleResolution": "node",
    "sourceMap": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "removeComments": false,
    "noImplicitAny": false,
    "typeRoots": [
      "node_modules/@types"
    ],
    "types": [
      "core-js",
      "jasmine",
      "file-saver"
    ]
  },
  "include": [
    "src/lib/*.ts",
    "test/e2e/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}