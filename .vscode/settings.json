{
    "tslint.rulesDirectory": "./node_modules/codelyzer",
    "typescript.tsdk": "./node_modules/typescript/lib",
    "enable_typescript_language_service": false,
    "files.exclude": {
        "**/*.js.map": true,
        "**/*.js": { "when": "$(basename).ts" },
        "**/*.d.ts": { "when": "$(basename).ts" },
        "node_modules" : true,
        "dist": true,
        "out-tsc": true
    }
}